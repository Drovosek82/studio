
{
  "entities": {
    "DeviceGroup": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "DeviceGroup",
      "type": "object",
      "description": "Represents a logical grouping of BMS devices for organizational purposes.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "createdAt", "updatedAt"]
    },
    "BMSDevice": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "BMSDevice",
      "type": "object",
      "description": "Represents a single BMS unit being monitored.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "modelId": { "type": "string", "description": "Reference to identified model." },
        "type": { "type": "string", "enum": ["ESP32", "Bluetooth"] },
        "lastSeenAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "type"]
    },
    "BmsModelInsight": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "BmsModelInsight",
      "type": "object",
      "description": "Information about a specific BMS model identified by AI.",
      "properties": {
        "id": { "type": "string" },
        "modelName": { "type": "string" },
        "protocol": { "type": "string" },
        "manufacturer": { "type": "string" },
        "capabilities": { "type": "array", "items": { "type": "string" } },
        "detectedCount": { "type": "number" },
        "lastSeen": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "modelName", "protocol", "detectedCount"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}/bmsDevices/{deviceId}",
        "definition": {
          "entityName": "BMSDevice",
          "schema": { "$ref": "#/backend/entities/BMSDevice" },
          "description": "Користувацькі пристрої BMS (Приватні)."
        }
      },
      {
        "path": "/modelInsights/{insightId}",
        "definition": {
          "entityName": "BmsModelInsight",
          "schema": { "$ref": "#/backend/entities/BmsModelInsight" },
          "description": "Глобальна база знань ШІ про моделі (Спільна)."
        }
      }
    ]
  }
}
